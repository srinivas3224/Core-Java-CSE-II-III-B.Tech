class Student
{
int rno;   //0
String sname; //null
float per; //0.0
Student(int rno,String sname,float per)
{
this.rno=rno;
this.sname=sname";
this.per=99.99f;
}
void info()
{
sop("Id:"+rno);
sop("Studen Name:"+sname);
sop("percentage:"+per);

}
psvm(sa)
{
Student s=new Student(1,"srinivas",9999);
s.info();
Student s1=new Student(2,"krithik",77777);
s.info();

Student s2=new Student(3,"srithan",6565);
s.info();

}
}



