class Student
{
int rno;   //0
String sname; //null
float per; //0.0
void info()
{
sop("Id:"+rno);
sop("Studen Name:"+sname);
sop("percentage:"+per);

}
psvm(sa)
{
Student s=new Student();
s.info();
}
}

